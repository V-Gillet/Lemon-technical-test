{% extends 'base.html.twig' %}

{% block title %}Utilisateur #{{ user.id }}
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<h1 class="text-primary text-center my-5 fw-bolder">Utilisateur #{{ user.id }}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th class="table-primary">Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th class="table-primary">Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th class="table-primary">Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th class="table-primary">Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th class="table-primary">Mot de passe</th>
					<td>{{ user.password }}</td>
				</tr>
				<tr>
					<th class="table-primary">Pays</th>
					<td>{{ user.country }}</td>
				</tr>
				<tr>
					<th class="table-primary">Sexe</th>
					<td>{{ user.sexe }}</td>
				</tr>
				<tr>
					<th class="table-primary">Métier</th>
					<td>{{ user.occupation }}</td>
				</tr>
			</tbody>
		</table>

		<div class="row justify-content-center mt-5">
			<a class="btn btn-outline-danger d-flex align-items-center justify-content-center py-3 px-4 w-25 col-6 h-100 mx-4" href="{{ path('app_user_index') }}">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-arrow-left mx-2" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"/>
					<path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
				</svg>Retour
			</a>
			<a class="btn btn-outline-primary d-flex align-items-center justify-content-center py-3 px-4 col-6 w-25 mx-4" href="{{ path('app_user_edit', {'id': user.id}) }}">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill mx-2" viewbox="0 0 16 16">
					<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
				</svg>Modifier
			</a>
			<div class="d-flex justify-content-center mt-5">
				{{ include('user/_delete_form.html.twig') }}
			</div>
		</div>
	</main>
{% endblock %}
