{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<main class="container-md bg_light">
		<h1 class="text-primary text-center fw-bolder m-0 mt-5">Inscription</h1>
		<div class="lemon-container row align-items-center w-75 m-auto">
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.firstname) }}
			{{ form_row(registrationForm.lastname) }}
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword) }}
			{{ form_row(registrationForm.country) }}
			{{ form_row(registrationForm.sexe) }}
			{{ form_row(registrationForm.occupation) }}
			{{ form_row(registrationForm.agreeTerms) }}
			<div class="d-flex">
				<a class="btn btn-outline-danger d-flex align-items-center justify-content-center py-3 px-4 me-auto" href="{{ path('app_login') }}">
					<svg class="mx-2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-arrow-left" viewbox="0 0 16 16">
						<path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z"/>
						<path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z"/>
					</svg>Retour
				</a>
				<button type="submit" class="btn btn-primary fw-bold text-dark px-4">S'inscrire</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</main>
{% endblock %}
