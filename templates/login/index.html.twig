{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<main class="container login-container">
		<h1 class="text-primary mb-4">Se connecter</h1>
		<form action="{{ path('app_login') }}" method="post" class="lemon-container-login">
			<label for="username" class="form-label">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">

			<label for="password" class="form-label mt-4">Mot de passe :</label>
			<input type="password" id="password" name="_password" class="form-control">


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-center mt-3">
				<button type="submit" class="btn btn-primary fw-bold p-2">Se connecter</button>
			</div>
		</form>
	</main>
{% endblock %}
